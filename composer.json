{
    "name": "php-core/simple-crypto",
    "description": "Simple PHP Cryptocurrency and Blockchain Helper Library",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "PHPCore\\SimpleCrypto\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PHPCore\\SimpleCrypto\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "PHPCore",
            "email": "dev@php-core.com"
        }
    ],
    "require": {
        "php": ">=8.3",
        "ext-gmp": "*",
        "ext-sodium": "*",
        "ext-mbstring": "*",
        "web3p/ethereum-util": "^0.1.4",
        "simplito/elliptic-php": "^1.0",
        "kornrunner/keccak": "^1.1",
        "stephenhill/base58": "^1.1",
        "brick/math": "^0.13.0",
        "barechain/bitcoin": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "phpunit",
        "test-coverage": "XDEBUG_MODE=coverage composer test",
        "cs-fix": "php-cs-fixer fix"
    }
}